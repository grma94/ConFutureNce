@model ConFutureNce.Models.Review

@{
    ViewData["Title"] = "Create";
}

<h2>Add review</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Problems" class="control-label"></label>
                <textarea asp-for="Problems" class="form-control"></textarea>
                <span asp-validation-for="Problems" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WhyProblems" class="control-label"></label>
                <textarea asp-for="WhyProblems" class="form-control"></textarea>
                <span asp-validation-for="WhyProblems" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Solution" class="control-label"></label>
                <textarea asp-for="Solution" class="form-control"></textarea>
                <span asp-validation-for="Solution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Achievements" class="control-label"></label>
                <textarea asp-for="Achievements" class="form-control"></textarea>
                <span asp-validation-for="Achievements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NotMentioned" class="control-label"></label>
                <textarea asp-for="NotMentioned" class="form-control"></textarea>
                <span asp-validation-for="NotMentioned" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control"/>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GeneralComments" class="control-label"></label>
                <textarea asp-for="GeneralComments" class="form-control"></textarea>
                <span asp-validation-for="GeneralComments" class="text-danger"></span>
            </div>
                <input asp-for="PaperId" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Add review" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Papers" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
