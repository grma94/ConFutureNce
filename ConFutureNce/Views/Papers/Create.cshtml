@model ConFutureNce.ViewModels.PaperPaperKeyworsViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Submit paper</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TitleENG" class="control-label"></label>
                <input asp-for="TitleENG" class="form-control" />
                <span asp-validation-for="TitleENG" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitleORG" class="control-label"></label>
                <input asp-for="TitleORG" class="form-control" />
                <span asp-validation-for="TitleORG" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Authors" class="control-label"></label>
                <input asp-for="Authors" class="form-control" />
                <span asp-validation-for="Authors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abstract" class="control-label"></label>
                <textarea asp-for="Abstract" class="form-control"></textarea>
                <span asp-validation-for="Abstract" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrgName" class="control-label"></label>
                <input asp-for="OrgName" class="form-control" />
                <span asp-validation-for="OrgName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaperKeywordsString" class="control-label"></label>
                <input asp-for="PaperKeywordsString" class="form-control" />
                <span asp-validation-for="PaperKeywordsString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaperFile" class="control-label">Upload Paper</label>
                <input type="file" name="file" id="file" style="width: 100%;" />
                <span asp-validation-for="PaperFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Language" class="control-label">Language</label>
                <select asp-for="LanguageId" class="form-control" asp-items="@(new SelectList(@ViewBag.ListofLanguages, "LanguageId", "LanguageName"))"></select>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
